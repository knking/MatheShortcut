<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Leap">

    <EditText
        android:id="@+id/fabnumber"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="459dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Year"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fabbutton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginBottom="379dp"
        android:layout_marginEnd="149dp"
        android:layout_marginLeft="147dp"
        android:layout_marginRight="149dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="28dp"
        android:text="FIND"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fabnumber" />

    <TextView
        android:id="@+id/fabresult"
        android:layout_width="217dp"
        android:layout_height="29dp"
        android:layout_marginBottom="326dp"
        android:layout_marginEnd="75dp"
        android:layout_marginLeft="92dp"
        android:layout_marginRight="75dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="RESULT"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fabbutton" />

    <TextView
        android:id="@+id/fabout"
        android:layout_width="384dp"
        android:layout_height="41dp"
        android:layout_marginBottom="269dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fabresult" />
</android.support.constraint.ConstraintLayout>